<div class="wrapper-white">
  <div class="row">
    <div class="col-12">
      <div class="main-container p-3" id="projects" style="margin-bottom: 0;background-color: transparent;padding-bottom: 0">
        <h2 class="p-title">My Projects</h2>
        <%# <p class="p-p">Lists of my projects.</p> %>
      </div>
      <div class="cards" style="padding-top: 4px;">
        <% data.products.each do |product| %>
          <div>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path(product.image) %>)">
              <div class="card-description">
                <h5 class = "p-name"><%= product.name %></h5>
                <p class= "description"><%= product.description %></p>
                <div class="d-flex justify-content-between align-items-center mt-1">
                  <% if product.url %>
                    <% link_to product.url, class: 'external-link', target: '_blank' do %>
                      <i class="fas fa-external-link-alt"></i>
                    <% end %>
                  <% else %>
                    <% link_to product.url, class: 'external-link offline', target: '_blank' do %>
                      offline
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
